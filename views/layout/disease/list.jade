extends ../adminlte/base
block content
    section.content-header
        h1
            | 疾病症狀查詢
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Customer
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus
            .box-body
                - if(messages.msg_info)
                    .alert.alert-success.alert-dismissable
                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                            | ×
                        h4
                            i.icon.fa.fa-check
                            | Success!
                        | !{messages.msg_info}
                - if(messages.msg_error)
                    .alert.alert-danger.alert-dismissable
                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                            | ×
                        h4
                            i.icon.fa.fa-ban
                            | Alert!
                        | !{messages.msg_error}
                a(href='customers/add').pull-left.btn.btn-primary
                    i.fa.fa-plus
                    |  Add Customer
                .data-table
                    table.table.table-bordered
                        tr
                            th
                                | No
                            th
                                | 醫生
                            th
                                | 科別
                            th
                                | 症狀
                            th
                                | 新增
                            th
                                | 刪除
                            if messages.msg_error
                                | !{messages.msg_error}
                            else
                                for Disease, index in data
                                    tr
                                        td #{index+1}
                                        td #{Disease.doc_category}
                                        td #{Disease.category}
                                        td #{Disease.symptom}
                                        td
                                            div(style='display:inline-block')
                                                a(href='/customers/edit/#{Disease.id}').btn.btn-sm.btn-primary
                                                    i.fa.fa-edit
                                        td
                                            div(style='display:inline-block')
                                                form(method='post', action='/customers/delete/#{Disease.id}')
                                                    input(type="hidden",name="_method", value="DELETE")
                                                    button.btn.btn-sm.btn-danger(type='submit')
                                                        i.fa.fa-remove
                    include ../_paginate