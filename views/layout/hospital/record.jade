extends ../adminlte/base
block content
    section.content-header
        h1
            | 病歷資料

    section.content
        .row
            .col-md-4.col-xs-12
                .box
                    .box-header.with-border
                        .row
                            .col-md-12
                                img(width='100%', src='http://eliteadmin.themedesigner.in/demos/plugins/images/big/img2.jpg')
                    .box-body
                        .row.text-center.m-t-10
                            .col-md-6.b-r
                                strong 姓名
                                p #{data.userName}
                            .col-md-6
                                strong 醫師
                                p #{data.doctor}
                        hr
                        .row.text-center.m-t-10
                            .col-md-12.b-r
                                strong Line ID
                                p #{data.lineId}
                        hr
                        .row.text-center.m-t-10
                            .col-md-12
                                strong Address
                                p
                                    | E104, Dharti-2, Chandlodia Ahmedabad
                                    br
                                    |  Gujarat, India.
            .col-md-8.col-xs-12
                .box
                    .box-body
                        .row
                            .col-md-3.col-xs-6.b-r
                                strong 姓名
                                br
                                p.text-muted #{data.userName}
                            .col-md-3.col-xs-6.b-r
                                strong 電話
                                br
                                p.text-muted (123) 456 7890
                            .col-md-3.col-xs-6.b-r
                                strong Email
                                br
                                p.text-muted john@admin.com
                            .col-md-3.col-xs-6
                                strong 病歷
                                br
                                p.text-muted Fever
                        hr
                        p.m-t-30
                            textarea(id='symptom', style='width:100%') #{data.symptom}
                            button.btn.btn-primary
                                i.fa.fa-pencil Update Symptom
                        h4.m-t-30 General Report
                        hr
                        h5
                            | Heart Beat
                            span.pull-right 80
                        .progress
                            .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100', style='width:80%;')
                                span.sr-only 50% Complete
                        h5
                            | Blood Pressure
                            span.pull-right 90
                        .progress
                            .progress-bar.progress-bar-custom(role='progressbar', aria-valuenow='90', aria-valuemin='0', aria-valuemax='100', style='width:90%;')
                                span.sr-only 50% Complete
                        h5
                            | Sugar
                            span.pull-right 50
                        .progress
                            .progress-bar.progress-bar-primary(role='progressbar', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100', style='width:50%;')
                                span.sr-only 50% Complete
                        h5
                            | Haemoglobin
                            span.pull-right 70%
                        .progress
                            .progress-bar.progress-bar-danger(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:70%;')
                                span.sr-only 50% Complete
